---
import "../styles/global.css";
import { profile } from "../data/profile.js";

const base = import.meta.env.BASE_URL;

const {
  title = "Portfolio",
  lang = "en",
} = Astro.props;

const t = lang === "ja"
  ? { contact: "連絡先", email: "メール", github: "GitHub", linkedin: "LinkedIn" }
  : { contact: "Contact", email: "Email", github: "GitHub", linkedin: "LinkedIn" };
---
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <header>
        <a href={base}><strong>{profile.name}</strong></a>
        <nav>
          <a href={`${base}en/`}>EN</a>
          <a href={`${base}ja/`}>日本語</a>
        </nav>
      </header>

      <slot />

      <footer style="margin-top:32px; padding-top:16px; border-top:1px solid var(--line);">
        <strong>{t.contact}</strong>
        <ul style="padding-left:18px;">
          <li><a href={`mailto:${profile.email}`}>{t.email}</a>: {profile.email}</li>
          <li><a href={profile.github} target="_blank" rel="noreferrer">{t.github}</a></li>
          <li><a href={profile.linkedin} target="_blank" rel="noreferrer">{t.linkedin}</a></li>
        </ul>
      </footer>
    </main>
  </body>
</html>
