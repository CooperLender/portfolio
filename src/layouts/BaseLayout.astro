---
import "../styles/global.css";
const { title = "Portfolio", lang = "en" } = Astro.props;

const base = import.meta.env.BASE_URL; // with trailingSlash:"always" => "/portfolio/"
const homeHref = base;
const enHref = `${base}en/`;
const jaHref = `${base}ja/`;
---
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <header>
        <a href={homeHref}><strong>Cooper Lender</strong></a>
        <nav>
          <a href={enHref}>EN</a>
          <a href={jaHref}>日本語</a>
        </nav>
      </header>
      <slot />
    </main>
  </body>
</html>
