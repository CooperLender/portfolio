---
import "../styles/global.css";

type Props = {
  title?: string;
  lang?: "en" | "ja";
  homeHref?: string;
  enHref?: string;
  jaHref?: string;
};

const base = import.meta.env.BASE_URL; // "/" in normal, "/portfolio/" for your GitHub Pages setup
const withBase = (p: string) => `${base}${p.replace(/^\/+/, "")}`;

const props = Astro.props as Props;

const title = props.title ?? "Portfolio";
const lang = props.lang ?? "en";

// Default: clicking "Cooper Lender" goes to the current language home
const homeHref = props.homeHref ?? withBase(lang === "ja" ? "ja/" : "en/");
const enHref = props.enHref ?? withBase("en/");
const jaHref = props.jaHref ?? withBase("ja/");
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <header>
        <a href={homeHref}><strong>Cooper Lender</strong></a>
        <nav aria-label="Language switch">
          <a class={lang === "en" ? "active" : ""} href={enHref}>EN</a>
          <a class={lang === "ja" ? "active" : ""} href={jaHref}>日本語</a>
        </nav>
      </header>

      <slot />
    </main>

    <style is:global>
      nav a.active {
        text-decoration: underline;
        text-underline-offset: 4px;
      }
    </style>
  </body>
</html>
