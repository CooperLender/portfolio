---
import BaseLayout from "../../../../layouts/BaseLayout.astro";

const title = "プロジェクト名";
const subtitle = "一言説明：何を作ったか＋なぜ重要か（1文）";

const links = {
  github: "https://github.com/CooperLender/REPO",
  demo: "https://example.com", // 任意
};

const overview = {
  goal: "解決したい課題・目的。",
  built: "実装したもの（システム/アプリ/基板/ファーム等）。",
  role: "自分が担当した範囲（自分の貢献）。",
  tech: "C/C++, Python, Verilog, KiCad, STM32, ROS2 など。",
};

const results = [
  "結果指標 #1（例：遅延、精度、消費電力、スループット）",
  "結果指標 #2（例：テスト合格、改善率など）",
];

const decisions = [
  "工夫点 #1 → なぜそうしたか。",
  "工夫点 #2 → 何が良くなったか。",
];

const validation = [
  "動作確認方法（テスト、計測、ベンチマーク等）。",
  "例外/エッジケースの確認。",
];
---

<BaseLayout title={`${title} | Cooper Lender`} lang="ja">
  <a href="../../" class="muted">← 戻る</a>

  <h1>{title}</h1>
  <p class="muted">{subtitle}</p>

  <div class="card">
    <h2>概要</h2>
    <ul>
      <li><strong>目的：</strong> {overview.goal}</li>
      <li><strong>実装内容：</strong> {overview.built}</li>
      <li><strong>担当範囲：</strong> {overview.role}</li>
      <li><strong>使用技術：</strong> {overview.tech}</li>
      <li>
        <strong>リンク：</strong>
        <a href={links.github} target="_blank" rel="noreferrer">GitHub</a>
        {links.demo ? (
          <> / <a href={links.demo} target="_blank" rel="noreferrer">デモ</a></>
        ) : null}
      </li>
    </ul>
  </div>

  <div class="card">
    <h2>構成</h2>
    <p class="muted">（後でブロック図の画像を追加）</p>
    <ul>
      <li>構成要素 / ステージ 1</li>
      <li>構成要素 / ステージ 2</li>
      <li>データ/制御の流れ</li>
    </ul>
  </div>

  <div class="card">
    <h2>工夫点</h2>
    <ul>
      {decisions.map((d) => <li>{d}</li>)}
    </ul>
  </div>

  <div class="card">
    <h2>検証</h2>
    <ul>
      {validation.map((v) => <li>{v}</li>)}
    </ul>
  </div>

  <div class="card">
    <h2>結果</h2>
    <ul>
      {results.map((r) => <li>{r}</li>)}
    </ul>
  </div>

  <div class="card">
    <h2>今後の改善</h2>
    <ul>
      <li>改善案 #1</li>
      <li>改善案 #2</li>
    </ul>
  </div>
</BaseLayout>
